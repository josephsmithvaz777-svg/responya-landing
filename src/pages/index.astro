							style="animation-delay: 1.1s"></line>
						<line
							x1="35%"
							y1="105%"
							x2="50%"
							y2="50%"
							stroke="url(#grad13)"
							stroke-width="1.5"
							stroke-dasharray="5,5"
							class="animate-dash"
							style="animation-delay: 1.3s"></line>

						<defs>
							<linearGradient
								id="grad1"
								x1="0%"
								y1="0%"
								x2="100%"
								y2="100%"
							>
								<stop
